FROM node:22.6.0-alpine3.19

WORKDIR /app

COPY package*.json .
COPY . .

ARG NEXT_PUBLIC_SERVER_API_URL
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_SERVER_API_URL=${NEXT_PUBLIC_SERVER_API_URL}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

RUN npm install
RUN npm run build

EXPOSE 10000

CMD ["npm", "run", "start"]